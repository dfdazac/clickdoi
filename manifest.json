{
  "manifest_version": 3,
  "name": "Clickable DOI Links",
  "version": "1.0",
  "description": "Turns DOI elements into clickable links",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}

